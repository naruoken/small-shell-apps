<html>
    <head>
        <meta charset="UTF-8" />
        <title>DATA: %%id</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
        <link rel="stylesheet" href="./css">
    </head>
    <body>
    <div class="container">
      <div class="flex-header">
        <div class="left-header">
          <b><p>DataBox:%%databox</p></b>
          <a href="./controller?%%params&req=hash" download="%%databox_hash_chain.txt"><p>#hashchain</p></a>
        </div>
        <div class="right-header">
        <button class="even-btn-menu">=</button>
        <nav>
        <ul>
          %%common_menu
       </ul>
       </nav>
        </div>
      </div>

      <div class="form-box">
      <div class="description">
        <h2>Data.values</h2>
        <p><b>#ID </b>%%id</p>
      </div>
      <form method="post" action="./controller?%%params&req=set&id=%%id&post=yes" onclick="document.charset='utf-8';">
      <ul>
      %%dataset
      </ul>
      <button class="button" type="submit">UPDATE</button>
      </form>
      <div class="action_links">
      <span><p style="cursor: pointer" onclick="window.open('./controller?%%params&req=log_viewer&id=%%id', 'log_viewer', 'width=820,height=280')">Show data updated history</p></span>
      <span><p style="cursor: pointer" onclick="release_confirmation()">Release</p></span>
      <span><a href="./controller?%%params&req=get&id=%%id&duplicate=yes">Copy</a></span>
      <span><p style="cursor: pointer" onclick="del_confirmation()">Delete</p></span>
      </div>
     </div>
   <script>
   const btn = document.querySelector('.even-btn-menu');
   const nav = document.querySelector('nav');

   document.addEventListener('click', (e) => {
     if(e.target.closest('.even-btn-menu')) {
       nav.classList.toggle('open-menu')
       if (btn.innerHTML === '=') {
         btn.innerHTML = '-';
       } else {
         btn.innerHTML = '=';
       }
     }else{
       nav.classList.remove('open-menu')
       btn.innerHTML = '=';
     }
   })

   function del_confirmation(){
     ret = confirm("Are you OK to delete this data ?");
     if (ret == true){
       location.href = "./controller?%%params&req=del&id=%%id";
     }
   }

   function release_confirmation(){
     ret = confirm("Are you OK to release this data ?");
     if (ret == true){
       location.href = "./controller?%%params&req=release&id=%%id";
     }
   }

   </script>
   </body>
</html>
