<html>
    <head>
        <meta charset="UTF-8" />
        <title>inquiry.new</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
        <link rel="stylesheet" href="./inquiry_css">
    </head>
    <body>
    <div class="container">

      <div class="form-box">
      <div class="description">
      <h1>#inquiry</h1>
      <p>Inquiry form to the team</p>
      <hr>
      </div>
      <form id="one-time-form" method="post" action="./inquiry?req=set&id=%%id">
      <ul>
       %%dataset
      </ul>
      <button class="button" id="one-time-button" type="submit">SUBMIT</button>
      </form>
      </div>

    </div>

   <script>
      // handle one time button
      document.getElementById('one-time-form').addEventListener('submit', function() {
        document.getElementById('one-time-button').disabled = true;
      });
   </script>
   </body>
</html>
