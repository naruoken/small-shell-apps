<html>
  <head>
    <meta charset="UTF-8" />
    <title>DATA: %%id</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" href="./team_css">
  </head>
  <body>
    <div class="container">
      <div class="flex-header">
        <div class="left-header">
          <h4><a href="./team?%%params&req=main">Team APP</a></h4>
        </div>
        <div class="right-header">
          <button class="even-btn-menu">=</button>
          <nav>
          <ul>
           %%common_menu
          </ul>
          </nav>
        </div>
      </div>

      <div class="form-box">
        <div class="description">
          <h1>#tasks.data</h1>
          <p>id:%%id</p>
        </div>
        <ul>
         %%dataset
        </ul>
        <div class="action_links">
          <span><p style="cursor: pointer" onclick="window.open('./team?%%params&req=log_viewer&id=%%id', 'log_viewer', 'width=820,height=280')">Show data update history</p></span>
        </div>
      </div>
    </div>

    <script>
      // handle menu
      const btn = document.querySelector('.even-btn-menu');
      const nav = document.querySelector('nav');

      document.addEventListener('click', (e) => {
        if(e.target.closest('.even-btn-menu')) {
          nav.classList.toggle('open-menu')
          if (btn.innerHTML === '=') {
            btn.innerHTML = '-';
          } else {
            btn.innerHTML = '=';
          }
        }else{
          nav.classList.remove('open-menu')
          btn.innerHTML = '=';
        }
      });

      // handle delete request
      function del_confirmation(){
        ret = confirm("Are you OK to delete this data ?");
        if (ret == true){
          location.href = "./team?%%params&req=del&id=%%id";
        }
      }

      var element = document.documentElement;
      var bottom = element.scrollHeight - element.clientHeight;
      window.scrollTo({top: bottom, left: 0, behavior: 'smooth'});
    </script>
  </body>
</html>
