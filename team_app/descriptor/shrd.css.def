body {
  font-family: 'Hiragino Kaku Gothic Pro',sans-serif;
  color: #000333;
  letter-spacing: .04em;
  font-size: 94%;
  height: 100%;
  margin: 0;
  background: #fffafa;
  overflow-x: hidden;
}

/* Base CSS */
@media screen and (min-width: 641px) {
  .container {
    margin: 0 auto;
    padding-left: 48px;
    padding-right: 48px;
}
}

@media screen and (max-width: 640px) {
  .container {
    margin: 0 auto;
    padding-left: 4px;
    padding-right: 4px;
}
}

.container * {
  box-sizing: border-box;
}

@media screen and (min-width: 641px){

  .main {
   padding-top: 126px;
   display: flex;
   flex-wrap: wrap;
   justify-content: center;
   align-items: flex-start;
   color: #5A595E;
   min-height: calc(86% - 50px);
  }

  .main .description {
    flex: none;
    max-width: 68%;
    text-align: left;
    padding: 24px 42px;
  }

  .main h1 {
    font-size: 180%;
  }

  .main p {
   line-height: 1.8em;
  }
}

@media screen and (max-width: 640px){

 .main {
   padding: 48px 12px;
   max-width: 98%;
   color: #5A595E;
   overflow-wrap normal;
   min-height: calc(86% - 50px);
  }

  .main .description {
    padding: 12px 0px;
    flex: none;
  }

  .main p {
   line-height: 1.8em;
  }
}

.main button {
  font-weight: bold;
  padding: 14px 20px;
  border-style: none;
  background: #07ADAF;
  color: #f8f8f8;
  text-transform: uppercase;
  letter-spacing: .09em;
  border-radius: 2px;
  cursor: pointer;
  cursor: hand;
  font-size: 80%;
}

