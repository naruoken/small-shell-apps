<html>
  <head>
    <meta charset="UTF-8" />
    <title>DATA: %%id</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" href="./css">
  </head>
  <body>
    <div class="container">
      <div class="flex-header">
        <div class="left-header">
          <select class="dataselect" onChange="location.href=value;">
           %%databox_list
          </select>
        </div>
        <div class="right-header">
          <button class="even-btn-menu">=</button>
          <nav>
           <ul>
            %%common_menu
           </ul>
          </nav>
        </div>
      </div>

      <div class="form-box">
        <div class="description">
          <h1>#values(ro)</h1>
          <p><b>#ID </b>%%id</p>
        </div>
        <ul>
        %%dataset
        </ul>
        %%link_button
        <div class="action_links">
          <span><p style="cursor: pointer" onclick="window.open('./base?%%params&req=log_viewer&id=%%id', 'log_viewer', 'width=820,height=280')">Show data update history</p></span>
        </div>
      </div>
    </div>

    <script>
      const btn = document.querySelector('.even-btn-menu');
      const nav = document.querySelector('nav');

      document.addEventListener('click', (e) => {
        if(e.target.closest('.even-btn-menu')) {
          nav.classList.toggle('open-menu')
          if (btn.innerHTML === '=') {
            btn.innerHTML = '-';
          } else {
            btn.innerHTML = '=';
          }
        }else{
          nav.classList.remove('open-menu')
          btn.innerHTML = '=';
        }
      })

      function copyUrl() {
        const element = document.createElement('input');
        element.value = "%%base_url/shrd?req=confirm&id=%%id";
        document.body.appendChild(element);
        element.select();
        document.execCommand('copy');
        document.body.removeChild(element);
        alert(element.value  +  "copied!");
      }
    </script>
  </body>
</html>
