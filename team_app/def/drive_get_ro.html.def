<html>
  <head>
    <meta charset="UTF-8" />
    <title>DATA: %%id</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" href="%%static_url/team.css">
  </head>
  <body>
    <div class="container">
      <div class="navbar">
        <div class="navbar-left-links">
          <h4><a href="./team?%%params&req=main">Team App</a></h4>
        </div>
        <div class="navbar-right-menu">
          <button class="even-btn">=</button>
          <nav>
          <ul>
            %%common_menu
          </ul>
          </nav>
        </div>
      </div>

      <div class="form-box">
        <div class="description">
          <h1>#drive.data</h1>
          <p>id:%%id</p>
        </div>
        <ul>
         %%dataset
        </ul>
        %%link_button
        <div class="action_links">
          <span><p style="cursor: pointer" onclick="window.open('./team?%%params&req=log_viewer&id=%%id', 'log_viewer', 'width=820,height=280')">Show data update history</p></span>
        </div>
      </div>
    </div>

    <script>
      // handle menu
      const btn = document.querySelector('.even-btn');
      const nav = document.querySelector('nav');

      document.addEventListener('click', (e) => {
        if(e.target.closest('.even-btn')) {
          nav.classList.toggle('open-menu')
           if (btn.innerHTML === '=') {
            btn.innerHTML = '-';
           } else {
            btn.innerHTML = '=';
          }
        }else{
          nav.classList.remove('open-menu')
          btn.innerHTML = '=';
        }
      });

      // handle file upload label
      const formInputs = document.getElementsByClassName("file");
      const length = formInputs.length;
      for (let i = 0; i < length; i++) {
        formInputs[i].onchange = function () {
          const file = this.files[0].name;
          const label = this.nextElementSibling;
          if (!label.classList.contains("changed")) {
            const span = document.createElement("span");
            span.className = "filename";
            this.parentNode.appendChild(span);
            label.classList.add("changed");
          }
          label.nextElementSibling.innerHTML = file;
        };
      }

      // handle copyURL request
      function copyUrl() {
         const element = document.createElement('input');
         element.value = "%%base_url/shrd?req=confirm&id=%%id";
         document.body.appendChild(element);
         element.select();
         document.execCommand('copy');
         document.body.removeChild(element);
         alert("copied download URL on clipboard");
      }
    </script>
  </body>
</html>
